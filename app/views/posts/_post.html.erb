<% unless post.nil? %>
    <div class='post card'> 
        <div class="header">
            <div class="avatar-name">
                <%= avatar_for current_user %>
                <div class="name-time">
                    <%= name_for(post.user)%>
                    <%= link_to(post) do%>
                        <p class="post_time"> Published <%= time_ago_in_words(post.created_at) %> ago </p>
                    <% end %>
                </div>
            </div>

            <% if post.user == current_user %>
                <div class="dropdown">
                    <button class="btn " type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <%= fa_icon "ellipsis-h" %>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                        <%= link_to "Edit", edit_post_path(post), class: 'btn ' %>
                        <%= button_to "Delete", post, :method => :delete, class: 'btn ' %>
                    </div>
                </div>
            <% end %>
        </div>

        <div class='content'>
            <% if request.fullpath[0..6] == '/posts/' && request.fullpath[-5..-1] == '/edit' %>
                <%= render 'post_form'%>
            <% else %>
                <%= post.content %>
            <% end %>
        </div>
        
        <div class='stats d-flex justify-content-end text-secondary'>
            <p class='likes-count'> <%= pluralize(post.likes.count, 'Like')%> </p>
            <p class='likes-count ml-2'> <%= pluralize(post.comments.count, 'Comment')%> </p>
        </div>

        <div class="dropdown-divider m-0"></div>
        
        <div class='like-comment row '>
            <a class="btn col" data-toggle="collapse" href="#viewComments<%= post.id%>" role="button" aria-expanded="false" aria-controls="collapseExample">
                <%= fa_icon "thumbs-up", class: "mr-2" %> Like
            </a>
            <a class="btn col " data-toggle="collapse" href="#Comments-area<%= post.id%>" role="button" aria-expanded="false" aria-controls="collapseExample">
                <%= fa_icon "comment", class: "mr-2" %> Comment
            </a>
        </div>
        <div class="comment-area collapse <%= 'show' if request.fullpath[0..6] == '/posts/' %>" id="Comments-area<%= post.id%>">
            <div class="dropdown-divider mt-0"></div>

            <%= render partial: "comment_form", locals: {post: post} %>
            <small class="text-muted"><%= render post.comments %></small>
        </div>
    </div>
<% end %>